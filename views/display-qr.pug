doctype html
html
  head
    title Display QR Code
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      header {
        background-color: #333;
        color: white;
        padding: 10px 0;
        text-align: center;
      }
      main {
        margin: 15px;
      }
      section {
        background-color: white;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 5px;
      }
      img {
        width: 40%; 
        height: auto;
        display: block; 
        margin-left: auto;
        margin-right: auto; 
      }
      button {
        background-color: #008CBA;
        color: white;
        padding: 15px; 
        font-size: 18px; 
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
        margin-right: 10px; 
      }
      button:hover {
        background-color: #007B9A;
      }
    script.
      function deleteQRCode() {
        fetch('/delete-qr/' + '#{qrCode._id}', { method: 'DELETE' })
          .then(res => window.location.href = '/')
          .catch(err => console.error(err));
      }
  body
    header
      h1 Your QR Code
    main
      section
        h2 QR Code
        img(src=qrCode.image alt="Your QR Code")
        h2 Details
        p Name: #{qrCode.name}
        p Link: 
          a(href=qrCode.link) #{qrCode.link} 
        p Important: #{qrCode.important ? 'Yes' : 'No'}
        button(onclick="deleteQRCode()") Delete QR Code
        button(onclick=`location.href='/update-qr/' + '${qrCode._id}'`) Update QR Code
        button(onclick="location.href='/'") Return to Main Menu
