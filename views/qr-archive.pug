doctype html
html
  head
    title QR Code Archive
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      header {
        background-color: #333;
        color: white;
        padding: 10px 0;
        text-align: center;
      }
      main {
        margin: 15px;
      }
      section {
        background-color: white;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 5px;
        display: flex; 
        flex-wrap: wrap; 
        justify-content: space-between; 
      }
      div {
        background-color: #f9f9f9;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        width: 30%;
      }
      img {
        width: 100%;
        height: auto;
      }
      button {
        background-color: #008CBA;
        color: white;
        padding: 15px; 
        font-size: 18px; 
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
      }
      button:hover {
        background-color: #007B9A;
      }
  body
    header
      h1 QR Code Archive
    main
      section
        each qrCode in qrcodes
          div
            h3= qrCode.name
            img(src=qrCode.image alt=qrCode.name)
            p Link: 
              a(href=qrCode.link) #{qrCode.link} 
            p Important: #{qrCode.important ? 'Yes' : 'No'}
            button(onclick=`location.href='/display-qr/' + '${qrCode._id}'`) Inspect QR Code
