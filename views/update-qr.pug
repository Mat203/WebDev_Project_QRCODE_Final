doctype html
html
  head
    title Update QR Code
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      header {
        background-color: #333;
        color: white;
        padding: 10px 0;
        text-align: center;
      }
      main {
        margin: 15px;
      }
      section {
        background-color: white;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 5px;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
      input, button { 
        padding: 15px;
        font-size: 18px;
      }
      button {
        background-color: #008CBA;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
      }
      button:hover {
        background-color: #007B9A;
      }
  body
    header
      h1 Update QR Code
    main
      section
        h2 Update QR Code
        form(action="/update-qr/" + qrCode._id method="POST")
          label(for="name") Enter new name for QR code:
          input#name(type="text" name="name" value=qrCode.name)
          label(for="important") Mark as important:
          input#important(type="checkbox" name="important" checked=qrCode.important)
          button(type="submit") Update QR Code
